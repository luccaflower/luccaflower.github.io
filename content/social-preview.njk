---
pagination:
  data: collections.posts
  size: 1
  alias: preview
permalink: "/social-preview-images/{{ preview.fileSlug }}.svg"
eleventyExcludeFromCollections: true
layout:
---
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="1200" height="628" viewBox="0 0 1200 628" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  {% set titleInLines = preview.data.title | splitlines(20) %}
	{% set descriptionInLines = preview.data.description | splitlines(50, 3) %}
  {% set numberOfLines = titleInLines.length %}
  {% if numberOfLines == 1 %}
    {% set verticalStartingPoint = 340 %}
  {% elseif numberOfLines == 2 %}
    {% set verticalStartingPoint = 290 %}
  {% elseif numberOfLines == 3 %}
    {% set verticalStartingPoint = 250 %}
  {% elseif numberOfLines == 4 %}
    {% set verticalStartingPoint = 210 %}
  {% endif %}
  {% set titleEndY = verticalStartingPoint + (numberOfLines * 80) %}
  {% set descriptionStartingPoint = titleEndY %}
  <rect width="100%" height="100%" fill="#282828" />
  <text text-anchor="start" font-family="Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace" font-size="60" fill="#bdae93">
		<tspan x="50" y="{{verticalStartingPoint - 150}}">0x1eaf.dev</tspan>
  </text>
	<line x1="50" y1="{{verticalStartingPoint - 100}}" x2="1150" y2="{{verticalStartingPoint - 100}}" stroke="#b8bb26" />
  <text id="text" font-family="Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace" font-size="80" font-weight="bold" fill="#bdae93">
  {% for line in titleInLines %}
     <tspan x="50" y="{{verticalStartingPoint + loop.index0 * 80}}">{{line}}</tspan>
  {% endfor %}
  </text>
  <text id="text" font-family="Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace" font-size="36" font-weight="bold" fill="#bdae93">
  {% for line in descriptionInLines %}
     <tspan x="50" y="{{descriptionStartingPoint + loop.index0 * 36}}">{{line}}</tspan>
  {% endfor %}
	</text>
</svg>
